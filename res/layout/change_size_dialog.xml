<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_marginBottom="4dip">
        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18dip" android:text="Current Width:"></TextView>
        <TextView android:layout_marginLeft="4dip" android:layout_width="wrap_content" android:textSize="18dip" android:layout_height="wrap_content" android:text="" android:id="@+id/size_dialog_curr_w"></TextView>
        <TextView android:text="Current Height:" android:id="@+id/TextView03" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18dip"></TextView>
        <TextView android:text="" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18dip" android:id="@+id/size_dialog_curr_h"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_height="match_parent" android:layout_width="fill_parent" android:id="@+id/linearLayout2">
        <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18dip" android:text="New Width:"></TextView>
        <EditText android:text="" android:layout_marginRight="4dip" android:layout_width="fill_parent" android:autoText="false" android:textSize="18dip" android:layout_height="wrap_content" android:inputType="numberSigned" android:numeric="signed" android:layout_marginLeft="4dip" android:id="@+id/size_dialog_w"></EditText>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="match_parent" android:id="@+id/LinearLayout01">
        <TextView android:text="New Height:" android:id="@+id/TextView01" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="18dip"></TextView>
        <EditText android:autoText="false" android:layout_marginRight="4dip" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textSize="18dip" android:numeric="signed" android:inputType="numberSigned" android:layout_marginLeft="4dip" android:id="@+id/size_dialog_h"></EditText>
    </LinearLayout>
</LinearLayout>
